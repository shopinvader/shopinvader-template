{% block 'body/content' %}
<div class="row justify-content-center">
  <div class="col-12 col-lg-9 col-xl-3 pt-4 pb-4">
    <div class="card shadow">
      <div class="card-body text-center">
        <h1 class="h3 text-uppercase pb-3">
        {% editable_text title, inline: true %}
