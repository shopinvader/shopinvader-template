          <div class="">
            <i class="fa fa-check text-success"></i>

            {% editable_text body, rows: 1, format:'html'%}
            Thank you, your password has been successfully updated
            {% endeditable_text %}
          </div>

          <a href="{% path_to account_index %}" class=" btn btn-outline-primary mt-4">
            {% editable_text link, rows: 1, format:'html'%}
            Sign in
            {% endeditable_text %}
          </a>
        </div>

        </a>
      </div>
    </div>
  </div>
</div>


